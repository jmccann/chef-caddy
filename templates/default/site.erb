<% @resource.servers = [@resource.servers] if @resource.servers.is_a?(String) -%>
<%= @resource.servers.join(', ') %> {
<% if @resource.log -%>
  log <%= @resource.log %>
<% end -%>
<% if @resource.proxy -%>
<%= render('proxy.erb', cookbook: 'caddy', :variables => { proxy: @resource.proxy }).gsub(/^/, '  ') %>
<% end -%>
<% if @resource.tls -%>
  tls <%= @resource.tls %>
<% end -%>
}
